@model EDR.Models.ViewModels.DancerEditViewModel
@using MvcCheckBoxList.Model

@{
    ViewBag.Title = "Dancer Edit" + Model.Dancer.FullName;
}

<h2 class="page-header">Dancer Edit: @Model.Dancer.FullName</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>DanceStyle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Dancer.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Dancer.Experience, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dancer.Experience, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dancer.Experience, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Dancer.YouTubeUsername, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dancer.YouTubeUsername, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dancer.YouTubeUsername, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <section class="checkBoxListFor">
                Dance Styles
                @using (Html.BeginForm("Edit", "Dancer", FormMethod.Post))
                {
                        @Html.CheckBoxListFor(model => model.PostedStyles.DanceStyleIds,
                                  model => model.AvailableStyles,
                                  style => style.Id,
                                  style => style.Name,
                                  model => model.SelectedStyles,
                                  Position.Horizontal)
                }
            </section>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}