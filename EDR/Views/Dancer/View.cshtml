@model EDR.Models.ViewModels.DancerViewViewModel

@{
    ViewBag.Title = "Dancer " + Model.Name;
}

<h2 class="page-header">Dancer: @Model.Name</h2>

@if (User.Identity != null && User.Identity.Name == Model.Username)
{
    <div class="well">
        <h3>Welcome to your dancer profile</h3>
        <a class="btn btn-primary" href="@Url.Action("Edit", "Dancer")">Edit Profile</a>
    </div>
}

