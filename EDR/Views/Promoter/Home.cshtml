@model EDR.Models.ViewModels.PromoterViewViewModel
@using EDR.Models
@using EDR.Utilities

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Promoter/_PromoterLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function (e) {
        //  locate each partial section
        //  if it has a URL set, load the contents into the area.

        $(".partialContents").each(function (index, item) {
            var url = $(item).data("url");
            if (url && url.length > 0) {
                $(item).load(url);
            }
        });
    });
</script>

<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <h4>Recent Activity</h4>
    <div class="partialContents" data-url="/Promoter/@Model.Promoter.ApplicationUser.UserName/GetUpdates">
        <img src="~/Content/images/indicator.white.gif" />Loading...
    </div>

</div>
<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h4>Latest Social Dances...</h4>
        </div>
        <div class="panel-body">
            @if (Model.NewSocials.Events.Count() > 0)
            {
                foreach (var social in Model.NewSocials.Events.OrderBy(c => c.NextDate))
                {
                    <div class="row" style="margin-top: 5px;">
                        <a class="btn btn-warning col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1" href="@Url.Action("View", "Event", new { id = social.Id, eventType = EDR.Enums.EventType.Class })" title="@social.Name" style="text-align: left;">
                            <div class="col-lg-2 col-md-2 croppedpic" style="height: 50px;">
                                @if (social.PhotoUrl != null)
                                {
                                    <img class="img-circle" style="width:50px; padding: 2px;" src="@social.PhotoUrl" />
                                }
                                else
                                {
                                    <img class="img-circle" style="width:40px; padding: 2px;" src="@Url.Content("~/Content/images/social.jpg")" />
                                }
                            </div>
                            <div class="col-lg-10 col-md-10">
                                @social.Name.PadRight(20, ' ').Substring(0, 20) <i class="glyphicon glyphicon-chevron-right"></i> @social.Place.City<br />
                                @social.NextDate.ToString("ddd, MMM dd, yyyy")
                            </div>
                        </a>
                    </div>
                }
            }
            else
            {
                @: No New Socials
            }
            <a class="btn btn-link pull-right" href="@Url.Action("Dance", "Home")" title="Find More Socials">
                <h4>More...</h4>
            </a>
        </div>
    </div>
    <div class="panel panel-warning">
        <div class="panel-heading">
            New Dancers
        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/Shared/Events/_UserListPartial.cshtml", Model.NewDancers)
        </div>
    </div>
</div>