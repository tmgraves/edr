@model EDR.Models.ViewModels.StoreItemsViewModel

@{
    ViewBag.Title = "Index";
}

<h1>Index</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DancePacks.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DancePacks.FirstOrDefault().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DancePacks.FirstOrDefault().Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.DancePacks) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td class="button">
            @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = item.Id }, "")
        </td>
    </tr>
}

</table>
