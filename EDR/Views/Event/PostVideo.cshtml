@model EDR.Models.ViewModels.EventPostVideoViewModel

@{
    ViewBag.Title = "Post a Video";
}

<h1 class="page-header">
    <span class="text-warning">Post a Video</span> for @Model.Event.Name
    <small>at @Model.Event.Place.Name</small>
</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>Current Videos</h3>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="height: 350px; overflow: auto;">
                <ul class="list-inline">
                    @if (Model.Event.Videos != null && Model.Event.Videos.Count > 0)
                    {
                        foreach (var video in Model.Event.Videos)
                        {
                            <li class="col-lg-4 col-md-4" style="vertical-align: top;">
                                <div>
                                    <div class="thumbnail">
                                        <a target="_blank" href="https://www.youtube.com/watch?v=@video.YoutubeId&feature=player_embedded">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="videocontainer" style="height: 180px;">
                                                <div id="videoimage">
                                                    <img src="https://img.youtube.com/vi/@Html.DisplayFor(s => video.YoutubeId)/mqdefault.jpg" />
                                                </div>
                                                <div id="videoplaybutton">
                                                    <div id="playbutton">
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                        <div class="caption">
                                            <h4 style="white-space: normal;">@video.Title</h4>
                                            <p>
                                                Posted By:
                                                <a href="@Url.Action("Home", "Dancer", new { username = video.Author.UserName })" style="text-decoration: none;">
                                                    <span class="text-primary" style="vertical-align: top;">
                                                        <b>@video.Author.FirstName</b>
                                                    </span>
                                                </a>
                                                on <span class="text-danger" style="vertical-align: top;">@video.PublishDate.ToShortDateString()</span>
                                            </p>
                                        </div>
                                        <a class="btn btn-danger" style="vertical-align: top; margin: 5px;" title="Delete Video" href="@Url.Action("DeleteVideo", "Event", new { videoId = video.Id, eventId = Model.Event.Id, returnUrl = @Url.Action("PostVideo", new { id = @Model.Event.Id }) })" onclick="return confirm('Are you sure you want to DELETE this video?')">
                                            <i class="glyphicon glyphicon glyphicon-remove"></i>
                                            Delete Video
                                        </a>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                    else
                    {
                        @:There are no videos for this event.
                }
                </ul>
            </div>
        </div>
    </div>

    <div class="tabbable panel panel-info">
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="active"><a href="#youtubevideos" data-toggle="tab"><h4>Choose One of Your YouTube Videos</h4></a></li>
                <li><a href="#facebookvideos" data-toggle="tab"><h4>Choose One of Your Facebook Videos</h4></a></li>
            </ul>
        </div>
        <div class="tab-content panel-body">
            <div id="youtubevideos" class="tab-pane active">
                @if (Model.YoutubeVideos != null && Model.YoutubeVideos.Count() > 0)
                {
                    <ul class="list-inline">
                        @foreach (var video in Model.YoutubeVideos)
                        {
                            <li class="col-lg-4 col-md-4" style="vertical-align: top;">
                                <div>
                                    <div class="thumbnail">
                                        <a target="_blank" href="https://www.youtube.com/watch?v=@video.Id&feature=player_embedded">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="videocontainer" style="height: 180px;">
                                                <div id="videoimage">
                                                    <img src="https://img.youtube.com/vi/@Html.DisplayFor(s => video.Id)/mqdefault.jpg" />
                                                </div>
                                                <div id="videoplaybutton">
                                                    <div id="playbutton">
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                        <div class="caption">
                                            <h4 style="white-space: normal;">@video.Title</h4>
                                            <p>
                                                Video Date: <span class="text-danger" style="vertical-align: top;">@video.PubDate.ToShortDateString()</span>
                                            </p>
                                        </div>
                                        <a class="btn btn-success" title="Import Video" style="vertical-align: top; margin: 5px;" href="@Url.Action("ImportVideo", "Event", new { videoId = video.Id, eventId = Model.Event.Id, returnUrl = @Url.Action("PostVideo", new { id = @Model.Event.Id }) })">
                                            <i class="glyphicon glyphicon glyphicon-plus"></i>
                                            Import Video
                                        </a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    @:No YouTube videos found.
            }
            </div>
            <div id="facebookvideos" class="tab-pane">
            </div>
        </div>
    </div>
</div>

@Html.ActionLink("Back to Event", "View", "Event", new { id = Model.Event.Id }, htmlAttributes: new { @class = "btn btn-primary" })
