@model EDR.Models.ViewModels.EventPostVideoViewModel

@{
    ViewBag.Title = "Post a Video";
}

<h1 class="page-header">
    <span class="text-warning">Post a Video</span> for @Model.Event.Name
    <small>at @Model.Event.Place.Name</small>
</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h3>All Event Videos</h3>
            <ul class="list-inline">
                @if (Model.Event.Videos != null && Model.Event.Videos.Count > 0)
                {
                    foreach (var video in Model.Event.Videos)
                    {
                        <li style="vertical-align: top; width: 150px;">
                            <div class="photoTile">
                                <img class="img-thumbnail" src="@Url.Content(video.YoutubeThumbnail.ToString())" />
                            </div>
                            <a title="Delete Video" href="@Url.Action("DeleteVideo", "Event", new { videoId = video.Id, eventId = Model.Event.Id, returnUrl = @Url.Action("PostVideo", new { id = @Model.Event.Id }) })" onclick="return confirm('Are you sure you want to DELETE this video?')">
                                <i class="glyphicon glyphicon glyphicon-remove btn btn-danger"></i>
                                <span class="sr-only">Delete</span>
                            </a>
                        </li>
                    }
                }
                else
                {
                    @:There are no videos for this event.
                }
            </ul>
        </div>
    </div>

    <div class="tabbable panel panel-default">
        <div class="panel-heading">
            <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="active"><a href="#youtubevideos" data-toggle="tab"><h4>Choose One of Your YouTube Videos</h4></a></li>
                <li><a href="#facebookvideos" data-toggle="tab"><h4>Choose One of Your Facebook Videos</h4></a></li>
            </ul>
        </div>
        <div class="tab-content panel-body">
            <div id="youtubevideos" class="tab-pane active">
                @if (Model.YoutubeVideos != null && Model.YoutubeVideos.Count() > 0)
                {
                    <ul class="list-inline">
                        @foreach (var v in Model.YoutubeVideos)
                        {
                            <li style="padding: 10px; margin: 10px;">
                                <div id="youTubeContainer">
                                    <a target="_blank" href="https://www.youtube.com/watch?v=@v.Id&feature=player_embedded">
                                        <img id="youTubeImage" src="https://img.youtube.com/vi/@Html.DisplayFor(s => v.Id)/mqdefault.jpg" />
                                        <div id="youTubePlay"></div>
                                    </a>
                                </div>
                                <a class="btn btn-danger" title="Import Video" style="vertical-align: top;" href="@Url.Action("ImportVideo", "Event", new { videoId = v.Id, eventId = Model.Event.Id, returnUrl = @Url.Action("PostVideo", new { id = @Model.Event.Id }) })">
                                    <i class="glyphicon glyphicon glyphicon-plus"></i>
                                    Import Video
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    @:No YouTube videos found.
            }
            </div>
            <div id="facebookvideos" class="tab-pane">
            </div>
        </div>
    </div>
</div>

@Html.ActionLink("Back to Event", "View", "Event", new { id = Model.Event.Id }, htmlAttributes: new { @class = "btn btn-primary" })
