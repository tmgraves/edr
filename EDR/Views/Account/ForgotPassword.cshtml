@model EDR.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="container">
    <div class="center-block col-md-6 text-center" style="float: none;">
        <h1>Forgot your Password?</h1>
        <div class="panel panel-default">
            <div class="panel-body bg-info">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-lg-8 center-block" style="float: none;">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width: 100% !important; max-width: 100% !important;", @placeholder = "Enter Your Email Address" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-8 center-block" style="float: none;">
                        <input type="submit" value="Send Password Link" class="btn btn-primary" style="max-width: 100% !important; width: 100% !important;" />
                    </div>
                </div>
                <div>
                    Know your password? <a class="btn btn-link" href="@Url.Action("Login")">Login Now</a>
                </div>
            }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
