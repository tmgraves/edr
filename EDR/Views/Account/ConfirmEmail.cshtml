@model EDR.Models.ViewModels.ConfirmEmailViewModel

@{
    ViewBag.Title = "Confirm Email";
}

<div class="container-fluid">
    <div class="center-block col-md-6 text-center" style="float: none;">
        <h1>Confirm Email</h1>
        @if (ViewBag.Message != null)
        {
            if (ViewBag.Message == "Success")
            {
                <h4 class="text-success">Account Confirmed</h4>
            }
            else
            {
                <h4 class="text-danger">Validation Failed</h4>
            }
        }
        <div class="panel panel-default">
            <div class="panel-body bg-info">
                @using (Html.BeginForm("ConfirmEmailAsync", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)
                    <div class="form-group">
                        <div class="col-lg-12 center-block" style="float: none;">
                            @Html.TextBoxFor(m => m.Code, null, new { @class = "form-control", @style = "max-width: 100% !important; width: 100% !important;" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12 center-block" style="float: none;">
                            <input type="submit" class="btn btn-primary" value="Submit Code" style="max-width: 100% !important; width: 100% !important;" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
