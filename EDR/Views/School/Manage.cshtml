@model EDR.Models.ViewModels.ManageSchoolViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Manage " + Model.School.Name;
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("All Schools", "List", "School")</li>
    <li>@Html.ActionLink("School Profile", "View", "School", new { id = Model.School.Id }, null)</li>
    <li class="active">Manage School</li>
</ol>

<h2>Manage: <span class="text-info">@Model.School.Name</span></h2>
<hr />

<style>
    .dl-horizontal dt{
        text-align: left !important;
    }
</style>

<style>
    img {
        max-width: 100%; /* This rule is very important, please do not ignore this! */
    }

</style>

<div class="container-fluid">
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-default">
            <div class="panel-body ">
                <div id="viewdiv">
                    <div class="text-right">
                        <input id="btnEdit" type="button" class="btn btn-primary" value="Edit" />
                    </div>
                    <div class="text-center">
                        <div class="buttoncontainer" style="display: inline-block;">
                            <img class="targetpic" style="max-width: 100%;" src="@Url.Content(EDR.Utilities.ApplicationUtility.CheckImageLink(Model.School.PhotoUrl))" />
                            <button id="btnChangePicture" type="button" class="btn btn-info actionbutton" data-toggle="modal" data-target="#modalPic">
                                Change
                            </button>
                        </div>
                    </div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.School.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.School.Name)
                        </dd>
                    </dl>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.School.Address)
                        </dt>
                        <dd>
                            @Model.School.Address<br />
                            @if (Model.School.Address2 != null)
                            {
                                @Model.School.Address2<br />
                            }
                            @Model.School.City, @Model.School.State @Model.School.Zip<br />
                            @Model.School.Country
                        </dd>
                    </dl>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.School.FacebookLink)
                        </dt>

                        <dd>
                            <a href="@Model.School.FacebookLink" target="_blank" title="@Model.School.FacebookLink"><div class="item-short">@Model.School.FacebookLink</div></a>
                        </dd>
                    </dl>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.School.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.School.Description)
                        </dd>
                    </dl>
                </div>
                <div id="editdiv" style="display: none;">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
