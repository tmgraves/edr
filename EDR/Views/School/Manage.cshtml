                <h3>Classes</h3>
                <p>
                    <a href="#" class="text-primary eventstoggle">Present|Past Events</a>
                </p>
                @Html.ActionLink("Add a Class", "Create", "Event", new { eventType = EDR.Enums.EventType.Class, schoolId = Model.School.Id, role = EDR.Enums.RoleName.Teacher }, new { @class = "btn btn-warning actionbutton" } )
