@model EDR.Models.ViewModels.TeacherApplyViewModel

@{
    ViewBag.Title = "Teacher Application";
}

<h2 class="page-header">Teacher Application</h2>
@if (Model.Teacher != null)
{
    <h5>You've already applied to be a Teacher.  Your application is under review.</h5>
    @Html.ActionLink("Back to Dancer Page", "Home", "Dancer", new { username = User.Identity.Name }, new { @class = "btn btn-info" } )
}
else
{
    using (Html.BeginForm())
    {
        <input type="submit" value="Apply to be a Teacher" class="btn btn-default" />
    }
}
