@model EDR.Models.ViewModels.TeacherViewViewModel

@{
    ViewBag.Title = "Details";
}

@if (Model.Teacher.ApplicationUser.FacebookUsername != null)
{
    <img src="http://graph.facebook.com/@Model.Teacher.ApplicationUser.FacebookUsername/picture?type=normal" />
}
<h1 class="page-header">@Model.Teacher.ApplicationUser.FullName</h1>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Teacher.Resume)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Teacher.Resume)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.FacebookLink)
        </dt>
        <dd>
            <a href='@Model.Teacher.FacebookLink' target="_blank">@Model.Teacher.FacebookLink</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.Website)
        </dt>
        <dd>
            <a href='@Model.Teacher.Website' target="_blank">@Model.Teacher.Website</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Teacher.ContactEmail)
        </dt>
        <dd>
            <a href='mailto:@Model.Teacher.ContactEmail' target="_blank">@Model.Teacher.ContactEmail</a>
        </dd>

        <dt>
            Dance Styles
        </dt>

        <dd>
            <ul class="list-inline">
                @foreach (var item in Model.Teacher.DanceStyles)
                {
                    <li>@Html.ActionLink(item.Name, "Details", "DanceStyle", new { id = item.Id }, null)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<h2>Classes</h2>
@if (User.Identity != null && User.Identity.Name == Model.Teacher.ApplicationUser.UserName)
{
    <a href="@Url.Action("Create", "Event", new { role = "Teacher", eventType = "Class" }, null)">Add a Class</a>
}
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Class</th>
            <th>Teacher(s)</th>
            <th>Dance Style(s)</th>
            <th>Level</th>
            <th>Attendees</th>
            <th>Price</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teacher.Classes)
        {
            <tr>
                <td>
                    @String.Format("{0:dddd, M/d/yy}", item.StartDate)<br />
                    @String.Format("{0:h:mm tt}", item.StartDate)
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Class", new { id = item.Id }, null)<br />
                    Location:@Html.ActionLink(item.Place.Name, "Details", "Place", new { id = item.Place.Id }, null)<br />
                </td>
                <td>
                    <ul class="list-inline">
                        @if (item.Teachers != null)
                        {
                            foreach (var t in item.Teachers)
                            {
                                <li>@Html.ActionLink(t.ApplicationUser.FullName, "View", "Teacher", new { username = t.ApplicationUser.UserName }, null)</li>
                            }
                        }
                    </ul>
                </td>
                <td>
                    <ul class="list-inline">
                        @if (item.DanceStyles != null)
                        {
                            foreach (var s in item.DanceStyles)
                            {
                                <li>@Html.ActionLink(s.Name, "Details", "DanceStyle", new { id = s.Id }, null)</li>
                            }
                        }
                    </ul>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.Count)
                </td>
                <td>
                    @(item.Price.HasValue ? item.Price.ToString() : "Free")
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        @Html.ActionLink("Add to Calendar", "Signup", "Event", new { id = item.Id }, null)<br />
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
