@model EDR.Models.ViewModels.TeacherViewViewModel
@using EDR.Models
@using EDR.Utilities
@using EDR.Enums

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Teacher/_TeacherLayout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function (e) {
        //  locate each partial section
        //  if it has a URL set, load the contents into the area.

        $(".partialContents").each(function (index, item) {
            var url = $(item).data("url");
            if (url && url.length > 0) {
                $(item).load(url);
            }
        });
    });
</script>

<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <h4>Recent Activity</h4>
    <div class="partialContents" data-url="/Teacher/@Model.Teacher.ApplicationUser.UserName/GetUpdates">
        <img src="~/Content/images/indicator.white.gif" />Loading...
    </div>
</div>
<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <div class="panel panel-success">
        <div class="panel-heading">
            My Latest Classes/Workshops...
        </div>
        <div class="panel-body">
            @if (Model.NewClasses.Events.Count() > 0)
            {
                foreach (var cls in Model.NewClasses.Events.OfType<Class>().OrderBy(c => c.NextDate))
                {
                    <div class="col-lg-12 col-md-12 row" style="margin-top: 5px; ">
                        <div class="col-lg-4 col-md-4" style="height: 75px;">
                            @if (cls.VideoUrl != null)
                            {
                                @Html.Partial("~/Views/Shared/_VideoPlayerPartial.cshtml", new Video() { PhotoUrl = cls.PhotoUrl, VideoUrl = cls.VideoUrl })
                            }
                            else
                            {
                                if (cls.PhotoUrl != null)
                                {
                                    <a target="_blank" href="@Url.Content(cls.PhotoUrl)">
                                        <div class="croppedpic" style="display: block; max-height: 100%; max-width: 100%;">
                                            <img src="@Url.Content(cls.PhotoUrl)" />
                                        </div>
                                    </a>
                                }
                                else
                                {
                                    <div class="croppedpic" style="display: block; max-height: 100%; max-width: 100%;">
                                        <img src="~/Content/images/class.jpg" />
                                    </div>
                                }
                            }
                        </div>
                        <div class="col-lg-8 col-md-8">
                            <a class="btn btn-info" href="@Url.Action("View", "Event", new { id = cls.Id, eventType = EventType.Class })" title="@cls.Name" style="text-align: left; width: 100%;">
                                @cls.Name.PadRight(20, ' ').Substring(0, 20)<br />
                                @cls.Place.City<br />
                                @cls.NextDate.ToString("ddd, MMM dd, yyyy")
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                @: No New Classes/Workshops
            }
            <a class="btn btn-link pull-right" href="@Url.Action("MyTeach", "Teacher", new { username = User.Identity.Name })" title="Find More Classes/Workshops">
                <h4>More...</h4>
            </a>
        </div>
    </div>
    <div class="panel panel-warning">
        <div class="panel-heading">
            New Students
        </div>
        <div class="panel-body">
            @Html.Partial("~/Views/Shared/Events/_UserListPartial.cshtml", Model.NewStudents)
        </div>
    </div>
    <div class="panel panel-success">
        <div class="panel-heading">
            My Music
        </div>
        <div class="panel-body text-center">
            @if (Model.Teacher.ApplicationUser.SpotifyUri != null)
            {
                <iframe src="https://embed.spotify.com/?uri=@Model.Teacher.ApplicationUser.SpotifyUri" width="300" height="380" frameborder="0" allowtransparency="true"></iframe>
            }
            else
            {
                @: No Playlist Specified
            }
        </div>
    </div>
</div>
