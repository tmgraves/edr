@model EDR.Models.ViewModels.OwnerViewViewModel

@{
    ViewBag.Title = "Owner Page for " + Model.Owner.ApplicationUser.FullName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{string ctrName = ViewContext.RouteData.Values["action"].ToString();}

<div class="container" style="padding: 10px;">
    <div class="row">
        <h1 class="page-header">
            @Model.Owner.ApplicationUser.FullName
            @if (User.Identity != null && User.Identity.Name == Model.Owner.ApplicationUser.UserName)
            {
                <a title="Edit Profile" href="@Url.Action("Edit", "Owner", new { username = Model.Owner.ApplicationUser.UserName })">
                    <i class="glyphicon glyphicon glyphicon-pencil btn-sm btn-info" style="vertical-align: middle;"></i>
                    <span class="sr-only">Edit Profile</span>
                </a>
            }
        </h1>
    </div>
    <div class="well col-lg-2 col-md-2 col-sm-2 col-xs-2">
        <div class="row">
            <div style="text-align: center;">
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                    @if (Model.Owner.ApplicationUser.UserPictures.Where(x => x.ProfilePicture).FirstOrDefault() != null)
                    {
                        <img class=" img-thumbnail" src="@Url.Content(Model.Owner.ApplicationUser.UserPictures.Where(x => x.ProfilePicture).FirstOrDefault().ThumbnailFilename)" />
                    }
                    else
                    {
                        <img class=" img-thumbnail" src="~/Content/images/NoPic.png" />
                    }
                </div>
                @if (User.Identity != null && User.Identity.Name == Model.Owner.ApplicationUser.UserName)
                {
                    <p>
                        <a style="font-size: small;" href="@Url.Action("ChangePicture", "Dancer")">Change Picture</a>
                    </p>
                }
            </div>
            <div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <p>
                        <a target="_blank" href="https://maps.google.com/?q=@Model.Address.Latitude,@Model.Address.Longitude">
                            <img class="img-thumbnail" src="https://maps.googleapis.com/maps/api/staticmap?center=@Model.Address.Latitude,@Model.Address.Longitude&zoom=6&size=180x100&maptype=roadmap&markers=color:red%7Clabel:A%7C @Model.Address.Latitude, @Model.Address.Longitude">
                        </a>
                    </p>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                    @if (Model.Owner.Facebook != null)
                    {
                        <a class="img-thumbnail" href='@Model.Owner.Facebook' target="_blank" title="Visit Me On Facebook"><img src="@Url.Content("~/Content/images/facebookSmall.png")" /></a>
                    }
                    @if (Model.Owner.Website != null)
                    {
                        <a class="img-thumbnail" href='@Model.Owner.Website' target="_blank" title="Visit Me On the Web"><img src="@Url.Content("~/Content/images/web.png")" /></a>
                    }
                    @if (Model.Owner.ContactEmail != null)
                    {
                        <a class="img-thumbnail" href='mailto:@Model.Owner.ContactEmail' title="Email Me"><img src="@Url.Content("~/Content/images/email.png")" /></a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-10 col-lg-10 col-sm-10 col-xs-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <ul class="nav nav-pills nav-justified" role="tablist">
                    <li @if (ctrName == "Home") { <text> class="active" </text>      }><a href="@Url.Action("Home", "Owner", new { username = Model.Owner.ApplicationUser.UserName })">Home</a></li>
                    <li @if (ctrName == "MyPlaces") { <text> class="active" </text>     }><a href="@Url.Action("MyPlaces", "Owner", new { username = Model.Owner.ApplicationUser.UserName })">My Places</a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "List")
</p>
