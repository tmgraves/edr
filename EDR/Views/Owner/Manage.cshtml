@model EDR.Models.Owner

@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>

<div class="container-fluid">
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-info">
            <h4 class="col-lg-6 col-md-6 col-sm-6 col-xs-6">My Schools</h4>
            @Html.ActionLink("Add School", "Create", "School", new { role = EDR.Enums.RoleName.Owner }, new { @class = "btn btn-text" })
            <div class="panel-body">
                <div class="row">
                </div>
                @if (Model.Schools != null && Model.Schools.Count() > 0)
                {
                    foreach (var sch in Model.Schools.OrderBy(s => s.Name))
                    {
                        <div class="row" style="padding: 2px;">
                            @Html.ActionLink(sch.Name, "View", "School", new { id = sch.Id }, new { @class = "btn btn-link" })
                        </div>
                    }
                }
                else
                {
                    @: No Schools
                }
                @*<a class="btn btn-primary" href="@Url.Action("ImportClassFromFacebook", "Event")">
                        <h4>More Events...</h4>
                    </a>*@
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-default">
            <div class="panel-body ">
                <h3>Socials</h3>
                @Html.ActionLink("Create Social", "Create", "Event", new { eventType = EDR.Enums.EventType.Social, role = EDR.Enums.RoleName.Promoter }, null)
                <table class="table">
                    <thead>
                        <tr>
                            <th>Social</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Socials)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(member => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("View", "View", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
