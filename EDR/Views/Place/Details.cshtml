@model EDR.Models.Place

@{
    ViewBag.Title = Model.Name;
}

<h1 class="page-header">@Model.Name</h1>
<p class="lead">@Model.Address, @Model.City, @Model.State @Model.Zip</p>

<h2>Our Events</h2>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start</th>
            <th>End</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Event", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @(item.Price.HasValue ? item.Price.ToString() : "Free")
                </td>
            </tr>
        }
    </tbody>
</table>