@model IEnumerable<EDR.Models.Promoter>

<div class="container">
    @{
        int rowNo = 0;
    }
    @foreach (var item in Model.OrderBy(m => m.ApplicationUser.FullName))
    {
        <text>
            <div class="col-lg-6" style="padding: 5px !important;">
                <div class="box-default col-lg-12 nospace" style="padding: 5px !important;">
                    <div class="col-lg-3 bg-success helper">
                        <span></span><img src='@Url.Content(item.ApplicationUser.PhotoUrl ?? "~/Content/images/NoImage.png")' />
                    </div>
                    <div class="col-lg-6 text-left">
                        <div class="item-title text-primary">
                            <a href="@Url.Action("Home", "Promoter", new { id = item.ApplicationUser.UserName })" onmouseover="openEvent(@rowNo, @item.ApplicationUser.Latitude, @item.ApplicationUser.Longitude); return false;">
                                @(rowNo + 1). @item.ApplicationUser.FullName
                            </a>
                        </div>
                        <div class="small" style="margin-top: 5px;">
                            @Html.DisplayFor(modelItem => item.ApplicationUser.City), @Html.DisplayFor(modelItem => item.ApplicationUser.State)
                        </div>
                    </div>
                    <div class="text-right col-lg-3" style="padding: 0px !important; margin-top: 2px; white-space: normal;">
                        @foreach (var s in item.DanceStyles)
                        {
                            <span class="label label-default pull-right" style="margin: 1px;">@s.Name</span><text> </text>
                        }
                    </div>
                </div>
            </div>
        </text>
                        rowNo++;
    }
</div>



