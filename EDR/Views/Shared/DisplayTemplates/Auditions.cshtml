@model IEnumerable<EDR.Models.Audition>

@foreach (var p in Model)
{
    <div class="row">
        <div class="col-lg-2">
            <b>Date:</b>
        </div>
        <div class="col-lg-10">
            @p.StartDate.ToLongDateString()
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <b>Time:</b>
        </div>
        <div class="col-lg-10">
            @(Convert.ToDateTime(p.StartTime).ToString("hh:mm tt")) to
            @(Convert.ToDateTime(p.EndTime).ToString("hh:mm tt"))
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <b>Location:</b>
        </div>
        <div class="col-lg-10">
            @p.Place.Name<br />
            @p.Place.Address<br />
            @p.Place.City, @p.Place.State @p.Place.Zip
        </div>
    </div>
    <hr />
}