@model EDR.Models.ViewModels.DancerViewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{string ctrName = ViewContext.RouteData.Values["action"].ToString();}

<div class="container" style="padding: 10px;">
    <div class="row">
        <h1 class="page-header">
            @Model.Dancer.FirstName
            @if (User.Identity != null && User.Identity.Name == Model.Dancer.UserName)
            {
                @*<a style="font-size: medium;" href="@Url.Action("Edit", "Dancer")">Edit Profile</a>*@
                <a title="Edit Profile" href="@Url.Action("Edit", "Dancer")">
                    <i class="glyphicon glyphicon-pencil btn-sm btn-info" style="vertical-align: middle;"></i>
                    <span class="sr-only">Edit Profile</span>
                </a>
            }
        </h1>
    </div>
    <div class="well col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="text-align: center;">
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 img-thumbnail">
                    @if (Model.Dancer.UserPictures.Where(x => x.ProfilePicture).FirstOrDefault() != null)
                    {
                        <img src="@Url.Content(Model.Dancer.UserPictures.Where(x => x.ProfilePicture).FirstOrDefault().ThumbnailFilename)" />
                    }
                    else
                    {
                        <img src="~/Content/images/NoPic.png" />
                    }
                </div>
                @if (User.Identity != null && User.Identity.Name == Model.Dancer.UserName)
                {
                    <p>
                        <a style="font-size: small;" href="@Url.Action("ChangePicture", "Dancer")">Change Picture</a>
                    </p>
                }
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <div class="row">
                    <label class="control-label col-lg-2 col-md-2 col-sm-2 col-xs-2">Location: </label>@Model.Address.City, @Model.Address.State
                </div>
                <div class="row">
                    <label class="control-label col-lg-2 col-md-2 col-sm-2 col-xs-2">Experience: </label>@Model.Dancer.Experience Year(s)
                </div>
                <div class="row">
                    <label class="control-label col-lg-2 col-md-2 col-sm-2 col-xs-2">Dance Styles: </label>
                    <ul class="list-inline">
                        @foreach (var item in Model.Dancer.DanceStyles)
                        {
                            <li>@Html.ActionLink(item.Name, "Details", "DanceStyle", new { id = item.Id }, null)</li>
                        }
                    </ul>
                </div>
                @if (Model.Dancer.FacebookUsername != null)
                {
                    <a class="img-thumbnail" href='https://www.facebook.com/@Model.Dancer.FacebookUsername' target="_blank" title="Visit Me On Facebook"><img src="@Url.Content("~/Content/images/facebookSmall.png")" /></a>
                }
            </div>
        </div>
    </div>

    <div class="col-md-2 col-lg-2 col-sm-2 col-xs-2">
        <div class="row">
            <div class="row col-md-12 col-lg-12 col-sm-12 col-xs-12" style="text-align: left;">
                <ul class="nav nav-pills nav-stacked" role="tablist">
                    <li @if (ctrName == "MyDance") { <text> class="active" </text>     }><a href="@Url.Action("MyDance", "Dancer", new { username = Model.Dancer.UserName })">Where I Dance</a></li>
                    <li @if (ctrName == "MyLearn") { <text> class="active" </text>      }><a href="@Url.Action("MyLearn", "Dancer", new { username = Model.Dancer.UserName })">Where I Learn</a></li>
                    <li @if (ctrName == "MyFriends") { <text> class="active" </text>       }><a href="@Url.Action("MyFriends", "Dancer", new { username = Model.Dancer.UserName })">My Friends</a></li>
                    <li><a href="#myperformance" role="tab" data-toggle="tab">Where I Perform</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="tabbable">
        <div class="col-md-10 col-lg-10 col-sm-10 col-xs-10">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="panel panel-info tab-pane panel-default active" id="mylearn">
                    <div class="panel-heading">
                        <h4 class="panel-title" style="font-size: 18pt;"><span class="">@RenderSection("section")</span></h4>
                    </div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "List")
</p>
