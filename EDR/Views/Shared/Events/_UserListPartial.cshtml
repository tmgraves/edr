@model IEnumerable<EDR.Models.ApplicationUser>
@using EDR.Utilities;

@foreach (var t in Model.OrderBy(x => x.FullName))
{
    <a class="btn btn-default col-lg-12 col-md-12 col-sm-12 col-xs-12 top" href="@Url.Action("MyDance", "Dancer", new { username = t.UserName }) " style="text-align: left; vertical-align: top;">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6 thumbnail">
            @if (t.UserPictures != null && t.UserPictures.Count > 0)
            {
                <img src="@Url.Content(t.UserPictures.First().ThumbnailFilename)" />
            }
            else
            {
                <img src="@Url.Content(ApplicationUtility.GetNoProfilePicture().ThumbnailFilename)" />
            }
        </div>
        <div class="col-lg-8 col-md-6 col-sm-6 col-xs-6">
            <span class="text-primary" style="vertical-align: top;">@t.FullName</span>
        </div>
    </a>
    @*@Html.ActionLink(t.ApplicationUser.FullName, "View", "Teacher", new { username = t.ApplicationUser.UserName }, htmlAttributes: new { @style = "padding: 5px" })*@
}
