@model IEnumerable<EDR.Models.ApplicationUser>
@using EDR.Utilities;

@foreach (var u in Model.OrderBy(x => x.FullName))
{
    <a href="@Url.Action("Home", "Dancer", new { username = u.UserName }) " style="text-align: left; text-decoration: none; vertical-align: top;" title="@u.FirstName">
        <div class="captionpic" style="display: inline-block;">
            @if (u.UserPictures != null && u.UserPictures.Count > 0)
            {
                <img src="@Url.Content(u.UserPictures.First().Filename)" />
            }
            else
            {
                <img src="@Url.Content("~/Content/images/NoPic.png")" />
            }
        </div>
    </a>
}
