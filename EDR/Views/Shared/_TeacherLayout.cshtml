@model EDR.Models.ViewModels.TeacherViewViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{string ctrName = ViewContext.RouteData.Values["action"].ToString();}

<div class="container" style="padding: 10px;">
    <div class="row">
        <h1 class="page-header">
            @Model.Teacher.ApplicationUser.FullName
            @if (User.Identity != null && User.Identity.Name == Model.Teacher.ApplicationUser.UserName)
            {
                <a title="Edit Profile" href="@Url.Action("Edit", "Teacher")">
                    <i class="glyphicon glyphicon glyphicon-pencil btn-sm btn-info"></i>
                    <span class="sr-only">Edit Profile</span>
                </a>
            }
        </h1>
    </div>
    <div class="well col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="text-align: center;">
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 img-thumbnail">
                    @if (Model.Teacher.ApplicationUser.UserPictures.Where(x => x.ProfilePicture).FirstOrDefault() != null)
                    {
                        <img src="@Url.Content(Model.Teacher.ApplicationUser.UserPictures.Where(x => x.ProfilePicture).FirstOrDefault().ThumbnailFilename)" />
                    }
                    else
                    {
                        <img src="~/Content/images/NoPic.png" />
                    }
                </div>
                @if (User.Identity != null && User.Identity.Name == Model.Teacher.ApplicationUser.UserName)
                {
                    <p>
                        <a style="font-size: small;" href="@Url.Action("ChangePicture", "Dancer")">Change Picture</a>
                        @*<a title="Change Picture" href="@Url.Action("ChangePicture", "Dancer")">
                    <i class="glyphicon glyphicon glyphicon-edit btn btn-primary"></i>
                    <span class="sr-only">Change Picture</span>
                </a>*@
                    </p>
                }
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <dl class="dl-horizontal">
                    <dt>
                        Location
                    </dt>
                    <dd>
                        @Model.Address.City, @Model.Address.State
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Teacher.Experience)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Teacher.Experience) Year(s)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Teacher.FacebookLink)
                    </dt>
                    <dd>
                        <a href='@Model.Teacher.FacebookLink' target="_blank">@Model.Teacher.FacebookLink</a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Teacher.Website)
                    </dt>
                    <dd>
                        <a href='@Model.Teacher.Website' target="_blank">@Model.Teacher.Website</a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Teacher.ContactEmail)
                    </dt>
                    <dd>
                        <a href='mailto:@Model.Teacher.ContactEmail' target="_blank">@Model.Teacher.ContactEmail</a>
                    </dd>

                    <dt>
                        Dance Styles
                    </dt>

                    <dd>
                        <ul class="list-inline">
                            @foreach (var item in Model.Teacher.DanceStyles)
                            {
                                <li>@Html.ActionLink(item.Name, "Details", "DanceStyle", new { id = item.Id }, null)</li>
                            }
                        </ul>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-lg-2 col-sm-3 col-xs-4" style="text-align: center;">
        <div class="row col-md-12 col-lg-12 col-sm-12 col-xs-12" style="text-align: left;">
            <ul class="nav nav-pills nav-stacked" role="tablist">
                <li @if (ctrName == "MyTeach") { <text> class="active" </text>  }><a href="@Url.Action("MyTeach", "Teacher", new { username = Model.Teacher.ApplicationUser.UserName })">Where I Teach</a></li>
                <li @if (ctrName == "Resume") { <text> class="active" </text>   }><a href="@Url.Action("Resume", "Teacher", new { username = Model.Teacher.ApplicationUser.UserName })">My Resume</a></li>
            </ul>
        </div>
    </div>
    <div class="tabbable">
        <div class="col-md-10 col-lg-10 col-sm-10 col-xs-10">
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="panel panel-info tab-pane panel-default active" id="mylearn">
                    <div class="panel-heading">
                        <h4 class="panel-title" style="font-size: 18pt;"><span class="">@RenderSection("section")</span></h4>
                    </div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "List")
</p>
