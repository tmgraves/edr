@model IEnumerable<EDR.Models.Student>
@using EDR.Utilities;

@foreach (var t in Model.OrderBy(x => x.Dancer.FullName))
{
    <a class="btn btn-default col-lg-4 col-md-12 col-sm-12 col-xs-12 top" href="@Url.Action("MyDance", "Dancer", new { username = t.Dancer.UserName }) " style="text-align: left; vertical-align: top;">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="captionpic">
                @if (t.Dancer.UserPictures != null && t.Dancer.UserPictures.Count > 0)
                {
                    <img src="@Url.Content(t.Dancer.UserPictures.First().ThumbnailFilename)" />
                }
                else
                {
                    <img src="@Url.Content("~/Content/images/NoPic.png")" />
                }
            </div>
        </div>
        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
            <span class="text-primary" style="vertical-align: top;">@t.Dancer.FirstName</span>
        </div>
    </a>
    @*@Html.ActionLink(t.ApplicationUser.FullName, "View", "Teacher", new { username = t.ApplicationUser.UserName }, htmlAttributes: new { @style = "padding: 5px" })*@
}